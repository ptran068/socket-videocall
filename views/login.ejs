	<script src="/Pages/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="/Pages/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="/Pages/js/main.js"></script>

</body>
</html>